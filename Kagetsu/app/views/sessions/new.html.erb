<div class="module-header">
	<div class="left-control"><%= link_to 'Cancel', :root, :class=>"btn btn-xs btn-default" %></div>
	<div class="module-title">Login</div>
</div>

<div class="main-login panel panel-default">
	<div class="panel-body">
		<% if flash.any? %>
			<div class="alert alert-danger" role="alert">
				<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
				<span class="sr-only"></span>
				<% flash.each do |key, value| %>
					<%= value %>
				<% end %>
			</div>
		<% end %>

		<%= form_tag login_path do %>
			<div class="form-group">
				<%=label_tag :username, nil, class: 'control-label' %>
				<%=text_field_tag :username, nil, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%=label_tag :password, nil, class: 'control-label' %>
				<%=password_field_tag :password, nil, class: 'form-control' %>
			</div>

			<%=submit_tag "Login", class: "btn btn-lg btn-primary btn-block" %>
		
			<div class="userauth-extra">
				Not a member yet? 
				<%= link_to 'Sign Up', signup_path %>
			</div>
		<%end%>
	</div>
</div>

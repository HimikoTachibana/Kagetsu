<div class="module-header">
	<div class="left-control"><%= link_to 'Cancel', :root, :class=>"btn btn-xs btn-default" %></div>
	<div class="module-title">Sign Up</div>
</div>

<div class="main-login panel panel-default">
	<div class="panel-body">
		<% if flash.any? %>
			<div class="alert alert-danger" role="alert">
				<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
				<span class="sr-only"></span>
				<% flash.each do |key, value| %>
					<%= value %>
				<% end %>
			</div>
		<% end %>

		<%= form_for @user do |f| %>
			<div class="form-group">
				<%=f.label :username, nil, class: 'control-label' %>
				<%=f.text_field :username, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%=f.label :password, nil, class: 'control-label' %>
				<%=f.password_field :password, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%=f.label :password_confirmation, nil, class: 'control-label' %>
				<%=f.password_field :password_confirmation, class: 'form-control' %>
			</div>

			<%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block" %>
		
			<div class="userauth-extra">
				Already have an account?
				<%= link_to 'Login', login_path %>
			</div>
		<%end%>
	</div>
</div>
